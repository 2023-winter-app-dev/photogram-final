
<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<div>
  <div>

    <form action="/insert_photo" method="post" enctype="multipart/form-data">
    
      <div>
        <label for="image_box">
          Image
        </label>

        <input type="file" id="image_box" name="query_image" class="form-control">

        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="3" placeholder="Enter a caption for photo..."></textarea>

        <input type="hidden" id="owner_id_box" name="query_owner_id" value="<%= session[:user_id]%>">
        <input type="hidden" id="likes_count_box" name="query_likes_count" value=0>
        <input type="hidden" id="comments_count_box" name="query_comments_count" value=0>        
      <button>
        Add photo
      </button>
      </div>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Caption
        </th>

        <th>
          Image
        </th>

        <th>
          Owner
        </th>

        <th>
          Likes count
        </th>

        <th>
          Comments count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <% if a_photo.owner.private %>
        
      <% else %>
        <tr>
          <td>
            <%= a_photo.id %>
          </td>

          <td>
            <%= a_photo.caption %>
          </td>

          <td>
            <img src=<%= a_photo.image %>>
          </td>

          <td>
            <%= a_photo.owner_id %>
          </td>

          <td>
            <%= a_photo.likes_count %>
          </td>

          <td>
            <%= a_photo.comments_count %>
          </td>

          <td>
            <%= time_ago_in_words(a_photo.created_at) %> ago
          </td>
          <td>
            <%= time_ago_in_words(a_photo.updated_at) %> ago
          </td>

          <td>
            <a href="/photos/<%= a_photo.id %>">
              Show details
            </a>
          </td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>

<hr>
